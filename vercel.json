{
    "version": 2,
    "builds": [
      { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
      { "src": "src/api/server.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "src/api/server.js" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
}